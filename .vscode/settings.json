{
  // editor
  "telemetry.telemetryLevel": "off",
  "files.exclude": {
    "**/.git": false
  },
  "explorer.confirmPasteNative": false,
  "breadcrumbs.enabled": true,
  "explorer.compactFolders": false,
  // "editor.semanticHighlighting.enabled": true,
  "workbench.colorTheme": "poimandres-noitalics-storm",
  "workbench.iconTheme": "symbols",
  "workbench.startupEditor": "none",
  "workbench.sideBar.location": "left",
  "workbench.layoutControl.enabled": false,
  "workbench.editor.enablePreview": false,
  "workbench.editor.labelFormat": "short",
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.showTabs": "none",
  "workbench.tree.enableStickyScroll": false,
  "workbench.tree.indent": 18,
  "workbench.activityBar.location": "hidden",
  "workbench.statusBar.visible": true,
  "workbench.panel.showLabels": false,
  "editor.folding": false,
  "editor.glyphMargin": false,
  "editor.lightbulb.enabled": "off",
  "editor.minimap.enabled": false,
  "editor.bracketPairColorization.enabled": false,
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.scrollbar.horizontalScrollbarSize": 4,
  "editor.scrollbar.verticalScrollbarSize": 4,
  "editor.stickyScroll.enabled": false,
  "explorer.autoReveal": false,
  "breadcrumbs.symbolPath": "off",
  "symbols.hidesExplorerArrows": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  // font
  "editor.fontFamily": "Fira Code, Cascadia Mono, Consolas, monospace",
  "editor.fontSize": 18,
  "editor.lineHeight": 2,
  "editor.tabSize": 4,
  "editor.wordWrap": "on",
  // Terminal
  "terminal.integrated.fontFamily": "Fira Code, Cascadia Mono, Consolas, monospace",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.tabs.location": "left",
  // Formatting
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // Search
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.svelte-kit": true
  },
  "search.quickOpen.includeHistory": false,
  // Linked editing
  "editor.linkedEditing": true,
  // git
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.enableCommitSigning": true,
  "git.allowForcePush": true,
  "gitlens.views.commits.files.layout": "tree",
  "gitlens.keymap": "none",
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.views.remotes.avatars": false,
  // languages
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "html.autoClosingTags": true,
  "files.associations": {
    "*.yrf": "json",
    "*.rpx": "xml",
    "*.stl": "json"
  }
}

{
  // editor
  "telemetry.telemetryLevel": "off",
  "files.exclude": {
    "**/.git": false
  },
  "explorer.confirmPasteNative": false,
  "breadcrumbs.enabled": true,
  "explorer.compactFolders": false,
  "workbench.colorTheme": "poimandres-noitalics",
  "workbench.iconTheme": "symbols",
  "workbench.startupEditor": "none",
  "workbench.sideBar.location": "left",
  "workbench.layoutControl.enabled": false,
  "workbench.editor.enablePreview": false,
  "workbench.editor.labelFormat": "short",
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.showTabs": "single",
  "workbench.tree.enableStickyScroll": false,
  "workbench.tree.indent": 18,
  // "workbench.activityBar.location": "hidden",
  "workbench.statusBar.visible": true,
  "workbench.panel.showLabels": false,
  "editor.folding": false,
  "editor.glyphMargin": false,
  "editor.lightbulb.enabled": "off",
  "editor.minimap.enabled": false,
  "editor.bracketPairColorization.enabled": false,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.scrollbar.horizontalScrollbarSize": 4,
  "editor.scrollbar.verticalScrollbarSize": 4,
  "editor.stickyScroll.enabled": false,
  "explorer.autoReveal": true,
  "breadcrumbs.symbolPath": "off",
  "symbols.hidesExplorerArrows": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "window.titleBarStyle": "custom",
  // font
  "editor.fontFamily": "Monaspace Neon, Fira Code Light, Fira Code, Ubuntu Mono, Consolas, 'Droid Sans Mono', 'monospace', monospace",
  "editor.fontSize": 18,
  "editor.lineHeight": 2,
  "editor.tabSize": 4,
  "editor.wordWrap": "on",
  // Terminal
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.tabs.location": "left",
  // Formatting
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "chat.commandCenter.enabled": false,
  // Search
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.svelte-kit": true
  },
  "search.quickOpen.includeHistory": false,
  // Linked editing
  "editor.linkedEditing": true,
  // git
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.enableCommitSigning": true,
  "git.allowForcePush": true,
  "gitlens.views.commits.files.layout": "tree",
  "gitlens.keymap": "none",
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.views.remotes.avatars": false,
  // languages
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "html.autoClosingTags": true,
  "files.associations": {
    "*.yrf": "json",
    "*.rpx": "xml",
    "*.stl": "json",
    "*.css": "tailwindcss",
    ".env*": "dotenv"
  },
  "dotnet.codeLens.enableReferencesCodeLens": false,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
    "pubspec.yaml": "pubspec.lock,pubspec_overrides.yaml,.packages,.flutter-plugins,.flutter-plugins-dependencies,.metadata",
    "*.dart": "${capture}.g.dart",
    "*.sqlite": "${capture}.${extname}-*",
    "*.db": "${capture}.${extname}-*",
    "*.sqlite3": "${capture}.${extname}-*",
    "*.db3": "${capture}.${extname}-*",
    "*.sdb": "${capture}.${extname}-*",
    "*.s3db": "${capture}.${extname}-*"
  },
  "httpyac.environmentShowStatusBarItem": true,
  "httpyac.responseViewContent": "exchange",
  "httpyac.useDecorationProvider": false
}
